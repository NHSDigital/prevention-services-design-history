{% extends "layouts/collection.njk" %}

{% block beforeContent %}
  {% if pathway and pathways[pathway] %}
    {# Custom breadcrumb with pathway #}
    {{ nhsukBreadcrumb({
      items: [
        { text: "Home", href: "/" },
        { text: pathways[pathway].title, href: pathways[pathway].url }
      ]
    }) }}
  {% else %}
    {{ super() }}
  {% endif %}
{% endblock %}
