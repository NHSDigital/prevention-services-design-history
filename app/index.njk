</div>

<div class="nhsuk-grid-row">

  {% for item in collections.all | eleventyNavigation(options.homeKey) %}
    {% if (item.title == "Guide")  %}
      <section class="nhsuk-grid-column-one-half nhsuk-u-margin-bottom-6">
        <h3 class="nhsuk-heading-m nhsuk-u-margin-bottom-1">
          <a class="nhsuk-link" href="{{ item.url | pretty }}">{{ item.title }}</a>
        </h3>
        <p class="nhsuk-body">{{ item.excerpt }}</p>
      </section>
    {% endif %}
  {% endfor %}
