    "Manage vaccinations in schools",
    "Manage your appointments",
    "Record a vaccination",
    "Select people for invitation",
    "Vaccinations in the App"
  ] },
  { title: "Personalised prevention", services: [
    "Personalised prevention",
    "Lung health check",
    "NHS Health Check Online",
    "Personalised prevention platform",
    "Smoking cessation"
  ] }
] %}

{% for section in sections %}
  <div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-two-thirds">
      <h2 class="nhsuk-heading-l">
        {{ section.title }}
      </h2>
    </div>
  </div>
  {% for batch in section.services | batch(2) %}
    <div class="nhsuk-grid-row">
    {% for service in batch %}
      {% for item in collections.all | eleventyNavigation(options.homeKey) %}
        {% if (service == item.title)  %}
          <section class="nhsuk-grid-column-one-half nhsuk-u-margin-bottom-6">
            <h3 class="nhsuk-heading-m nhsuk-u-margin-bottom-1">
              <a class="nhsuk-link" href="{{ item.url | pretty }}">{{ item.title }}</a>
            </h3>
            <p class="nhsuk-body">{{ item.excerpt }}</p>
          </section>
        {% endif %}
      {% endfor %}
    {% endfor %}
    </div>
  {% endfor %}
{% endfor %}

<div class="nhsuk-grid-row">
  <div class="nhsuk-grid-column-two-thirds">
    <h2 class="nhsuk-heading-l">
      Reference
    </h2>
